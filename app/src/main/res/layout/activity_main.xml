<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:newview="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.ylz.newapp.MainActivity">

    <TextView
        android:id="@+id/s"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:gravity="center"
        android:shadowColor="#A3190F"
        android:shadowDx="-10"
        android:shadowDy="-6"
        android:shadowRadius="2"

        android:text="唐门!"
        android:textColor="#FFFFFF"
        android:textSize="27sp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="289dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="138dp"
        android:elevation="0dp"
        android:onClick="sas"
        android:text="Button"
        android:typeface="normal"
        tools:layout_editor_absoluteX="280dp"
        tools:layout_editor_absoluteY="239dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="368dp"
        android:layout_height="57dp"
        android:text="TextView"
        android:gravity="center"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="16dp" />
    <com.ylz.newapp.MyImageView
        android:id="@+id/myView1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        newview:Text="Text"
        newview:Src="@mipmap/ic_launcher"
        tools:layout_editor_absoluteY="320dp"
        android:layout_marginRight="8dp"
        newview:layout_constraintRight_toRightOf="parent"></com.ylz.newapp.MyImageView>

</android.support.constraint.ConstraintLayout>
